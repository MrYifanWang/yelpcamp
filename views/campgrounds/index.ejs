<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
             <h1 class="display-4"><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome To YelpCamp!</h1>
             <p class="lead">View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
             </p>
         </div>
        
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card"">
                    <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>